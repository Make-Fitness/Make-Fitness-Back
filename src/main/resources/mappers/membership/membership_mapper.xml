<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="korit.com.make_fitness.mapper.MembershipMapper">
    <resultMap id="customerResultMap" type="korit.com.make_fitness.entity.Membership">
        <id property="membershipId" column="membership_id"/>
        <result property="userId" column="user_id"/>
        <result property="promotionId" column="promotion_id"/>
        <result property="promotionSessionCount" column="promotion_session_count"/>
        <result property="promotionSessionTime" column="promotion_session_time"/>
        <result property="expiredDate" column="expired_date"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>


    <insert id="insert" keyProperty="membershipId" useGeneratedKeys="true">
        insert into membership_tb
        values (
            default,
            #{userId},
            #{promotionId},
            #{promotionSessionCount},
            #{promotionSessionTime},
            now(),
            now(),
            now()
        )
    </insert>
    <update id="update" keyProperty="membershipId" useGeneratedKeys="true">
        update membership_tb
        left outer join
        set
            promotion_session_count = (
                select
                    SUBSTRING_INDEX(#{promotionName}, '_', 2)
                from
                    promotion_tb

            ),
            promotion_session_time = (select #{promotionTime} from promotion_tb),
            expired_date = DATE_ADD(now(), INTERVAL #{promotionSessionCount} MONTH),
            updated_at = now()
        where
            membership_id = #{membershipId}
    </update>
    <select id="findByUserId" resultMap="customerResultMap">
        select *
        from
            customer_tb
        where
            user_id = #{userId}
    </select>
</mapper>